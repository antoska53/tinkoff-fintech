<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_avatar_users"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_name_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#FAFAFA"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageview_avatar_users"
        app:layout_constraintTop_toTopOf="@id/imageview_avatar_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_email_users"/>
    <TextView
        android:id="@+id/textview_email_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#A1A1A1"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageview_avatar_users"
        app:layout_constraintTop_toBottomOf="@id/textview_name_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageview_avatar_users"
        />



</androidx.constraintlayout.widget.ConstraintLayout>